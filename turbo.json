{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "inputs": ["src/schema/**/*.ts", "drizzle.config.ts", ".env*"]
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["drizzle/migrations/**/*.sql", ".env*"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "inputs": [".env*"]
    }
  }
}
